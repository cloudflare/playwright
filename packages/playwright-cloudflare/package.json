{
  "name": "@cloudflare/playwright",
  "description": "Playwright for Cloudflare Workers",
  "version": "0.0.1-next",
  "license": "Apache-2.0",
  "type": "module",
  "publishConfig": {
    "access": "restricted"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    },
    "./test": {
      "types": "./test.d.ts",
      "import": "./lib/esm/test.js",
      "require": "./lib/cjs/test.js",
      "default": "./lib/esm/test.js"
    },
    "./internal": {
      "types": "./internal.d.ts",
      "import": "./lib/esm/internal.js",
      "require": "./lib/cjs/internal.js",
      "default": "./lib/esm/internal.js"
    },
    "./fs": {
      "types": "./fs.d.ts",
      "import": "./lib/esm/bundles/fs.js",
      "require": "./lib/cjs/bundles/fs.js",
      "default": "./lib/esm/bundles/fs.js"
    },
    "./lib/*": {
      "import": "./lib/esm/playwright-core/src/*.js",
      "require": "./lib/cjs/playwright-core/src/*.js",
      "default": "./lib/esm/playwright-core/src/*.js"
		}
  },
  "scripts": {
    "generate-injected:core": "cd ../.. && node ./utils/generate_injected.js",
    "ci:core:bundles:utils": "cd ../playwright-core/bundles/utils && npm ci --save=false --fund=false --audit=false",
    "ci:core:bundles:zip": "cd ../playwright-core/bundles/zip && npm ci --save=false --fund=false --audit=false",
    "ci:test:bundles:expect": "cd ../playwright/bundles/expect && npm ci --save=false --fund=false --audit=false",
    "ci:bundles:fs": "cd ./bundles/fs && npm ci --save=false --fund=false --audit=false",
    "ci:bundles": "npm run ci:core:bundles:utils && npm run ci:core:bundles:zip && npm run ci:test:bundles:expect && npm run ci:bundles:fs",
    "build:bundles": "node utils/build_bundles.js",
    "build:injected": "node utils/build_injected.js",
    "build:types": "node utils/copy_types.js",
    "build": "npm run generate-injected:core && npm run ci:bundles && npm run build:bundles && npm run build:injected && npm run build:types && npx vite build",
    "test:generate:worker": "node ./utils/generate_worker_tests.js",
    "test:generate:proxy": "node ./utils/generate_proxy_tests.js",
    "test:deploy": "npm run test:generate:worker && cd tests && npm ci --save=false --fund=false --audit=false && npx wrangler deploy",
    "test:dev": "npm run test:generate:worker && cd tests && npx wrangler dev --remote",
    "test:full": "npm run test:generate:proxy && cd tests && npx vitest run",
    "test:smoke": "npm run test:generate:proxy && cd tests && npx vitest run -t '@smoke'"
  },
  "devDependencies": {
    "vite": "^5.0.13"
  }
}
